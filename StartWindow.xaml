<Window x:Class="bibliotech.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bibliotech"
        mc:Ignorable="d"
        Title="StartWindow" Height="720" Width="1200">
    <Grid>

        <StackPanel Height="670" Width="1150">
            <TextBlock Text="Добро пожаловать в Библиотеч" FontSize="30" HorizontalAlignment="Center"></TextBlock>
            <Button x:Name="bookList" Content="Найти книгу" HorizontalAlignment="Right" Margin="10 10" Click="bookList_Click"></Button>
            <Button x:Name="userList" Content="Список пользователей" HorizontalAlignment="Right" Margin="10 10" Click="userList_Click"></Button>
            <Button x:Name="QR" Content="QR" HorizontalAlignment="Right" Margin="10 10" Click="QR_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
